<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skybk1"
    tools:context=".activity_update">
    <TextView
        android:id="@+id/editText4"
        android:layout_width="282dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Update Assets..."
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="35dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/l1" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:hint="UID"
        android:textSize="20dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:hint="Model_No"
        android:textSize="20dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:hint="It_Name"
        android:textSize="20dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:hint="Purchase_Detail"
        android:textSize="20dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:hint="Warrenty_Exp"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/editText5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="150dp"
        android:inputType="date"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:hint="Value"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="UPDATE" />



</RelativeLayout>