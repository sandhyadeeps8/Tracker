<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/skybk1"
    android:keepScreenOn="false">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/l1" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="282dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Add Assets"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="35dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:hint="UID"
        android:textSize="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:hint="Serial_No"
        android:textSize="20dp" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:hint="Model_No"
        android:textSize="20dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:hint="Classification"
        android:textSize="20dp" />


    <Spinner
        android:id="@+id/action_bar_spinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/editText4"
        tools:visibility="visible" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:hint="It_Name"
        android:textSize="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:hint="Purchase_Detail"
        android:textSize="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:hint="Warrenty_Exp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="550dp"
        android:hint="Value"
        android:textSize="20dp" />



    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:hint="Status"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/action_bar_spinner1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="600dp"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/editText4"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:text="INSERT" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        app:srcCompat="@drawable/image" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="200dp"
        android:text="GENERATE QR CODE" />

</RelativeLayout>